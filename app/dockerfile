FROM node:18-alpine

# Security: Create app directory with proper permissions
WORKDIR /app

# Security: Create non-root user with specific UID/GID
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001 -G nodejs

# Security: Copy package files first for better layer caching
COPY package*.json ./

# Security: Install dependencies with security audit
RUN npm ci --only=production --audit --fund=false && \
    npm cache clean --force && \
    rm -rf /tmp/* /var/cache/apk/*

# Security: Copy app source with proper ownership
COPY --chown=nodejs:nodejs . .

# Security: Remove unnecessary files and set proper permissions
RUN chmod -R 755 /app && \
    find /app -type f -name "*.md" -delete && \
    find /app -type f -name "*.txt" -delete

# Security: Switch to non-root user
USER nodejs

# Security: Expose port (no need to specify host)
EXPOSE 3000

# Security: Add security headers and health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node healthcheck.js

# Security: Use exec form to avoid shell injection
CMD ["node", "index.js"]
